meta(charset="utf-8")
meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")

if config.author
  meta(name="author", content=config.author)

block page_description
  meta(name="description", content=config.description)

title
    block site_title
        = config.title

// icon
link(rel="shortcut icon" type='image/png' href=url_for('images/icon/favicon.png'))
link(rel="apple-touch-icon" href=url_for('images/icon/icon@60.png'))
link(rel="apple-touch-icon" sizes="120x120" href=url_for('images/icon/icon@512.png'))
link(rel="apple-touch-icon" sizes="180x180" href=url_for('images/icon/icon@512.png'))

//- RSS
if theme.rss
    link(rel="alternate", href!=theme.rss ? theme.rss : url_for("rss2.xml"), title=config.title, type="application/rss2.xml")

//- Stylesheets
link(rel='stylesheet' href='//at.alicdn.com/t/font_1463996156_546314.css')
if is_post()
    link(rel='stylesheet' href='//cdn.bootcss.com/highlight.js/9.4.0/styles/default.min.css')
block page_css
!= css("css/style")


